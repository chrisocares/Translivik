<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ff79aeff"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cambiar Contraseña"
        android:id="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:textColor="#ffffffff"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="10dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Introduzca su contraseña actual"
        android:id="@+id/textView23"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtactual"
        android:layout_below="@+id/textView23"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_alignLeft="@+id/textView78"
        android:layout_alignStart="@+id/textView78" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Introduzca su nueva contraseña"
        android:id="@+id/textView78"
        android:layout_below="@+id/txtactual"
        android:layout_alignRight="@+id/textView23"
        android:layout_alignEnd="@+id/textView23"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtnueva"
        android:layout_below="@+id/textView78"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/txtactual"
        android:layout_alignEnd="@+id/txtactual"
        android:layout_alignLeft="@+id/textView78"
        android:layout_alignStart="@+id/textView78" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirme su nueva contraseña"
        android:id="@+id/textView82"
        android:layout_below="@+id/txtnueva"
        android:layout_alignLeft="@+id/textView78"
        android:layout_alignStart="@+id/textView78"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtcnueva"
        android:layout_below="@+id/textView82"
        android:layout_alignRight="@+id/txtactual"
        android:layout_alignEnd="@+id/txtactual"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/textView82"
        android:layout_alignStart="@+id/textView82" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Cambiar Contraseña"
        android:id="@+id/btncambiar"
        android:layout_marginTop="44dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:background="#ff0068ff"
        android:layout_below="@+id/txtcnueva"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView84"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView87"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView78"
        android:layout_alignEnd="@+id/textView78" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="ADVERTENCIA : Si selecciona la opción cambiar contraseña la aplicación se reiniciara ."
        android:id="@+id/textView88"
        android:layout_below="@+id/btncambiar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
