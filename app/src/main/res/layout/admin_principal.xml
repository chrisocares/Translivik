<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Menu"
    android:background="#ff79aeff"
    android:clickable="true">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="159dp"
            android:layout_height="140dp"
            android:id="@+id/btnadmchof"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#9E00A6"
            android:src="@drawable/chon" />

        <ImageButton
            android:layout_width="159dp"
            android:layout_height="140dp"
            android:id="@+id/btnadmtrasl"
            android:background="#DA532C"
            android:layout_marginLeft="5dp"
            android:src="@drawable/traslnm" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="159dp"
            android:layout_height="140dp"
            android:id="@+id/btnadminc"
            android:layout_marginTop="5dp"
            android:background="#F68821"
            android:src="@drawable/incnn" />

        <ImageButton
            android:layout_width="159dp"
            android:layout_height="140dp"
            android:id="@+id/btnadmpas"
            android:layout_marginTop="5dp"
            android:background="#2C21F6"
            android:layout_marginLeft="5dp"
            android:src="@drawable/pasxv" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/txtsedetrans"
        android:textColor="#ff79aeff"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="80dp">

        <ImageButton
            android:layout_width="159dp"
            android:layout_height="140dp"
            android:id="@+id/btnadmserv"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#4CF621"
            android:src="@drawable/servcpn" />

        <ImageButton
            android:layout_width="159dp"
            android:layout_height="140dp"
            android:id="@+id/btnadmsevr"
            android:background="#4C456D"
            android:layout_marginLeft="5dp"
            android:src="@drawable/realz" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bienvenido "
        android:id="@+id/textView89"
        android:textSize="35dp"
        android:textColor="#ffffffff"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtms"
        android:layout_above="@+id/textView89"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#4C456D"
        android:layout_alignTop="@+id/textView89" />

</RelativeLayout>
